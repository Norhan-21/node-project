<h1>Subjects</h1>

<div class="my-2">
    <a href="/subjects/create">Add a new subject</a>
</div>

{{#each subjects}}



<div class="d-flex justify-content-between">
        {{subName}}
      

    <div>

        <a href="/subjects/{{_id}}"> <button type="submit">Details</button></a>
      <a href="/subjects/{{_id}}/edit"> <button type="submit">Edit</button></a>

      <form action="/subjects/{{_id}}?_method=DELETE" method="post">
        <button type="submit"onclick="return confirm('Are you sure to delete?')">
         Delete</button>
      </form>

    </div>

  </div>

{{/each}}

<div>
  <button onclick="history.back()">Go Back</button>
</div>