<h1>Edit {{subject.subName}}</h1>

<form action="/subjects/{{subject._id}}?_method=PUT" method="POST">

  <div>
    <label for="">Name</label>

    <input type="text" class="form-control" name="subName" value="{{subject.subName}}" />
  </div>

  <div>
    <label for="">Code</label>

    <input type="text" class="form-control" name="subCode" value="{{subject.subCode}}"/>
  </div>
{{!-- /////////////////////// --}}
  <div>
    <label for="">Department</label>

    <select name="subDepartment" id="" class="form-select" >
       {{#each departments}}
           <option value="{{_id}}">{{name}}</option>
       {{/each}}
    </select>
  </div>

<div>
    <label for="">Previous Subject</label>

    <input type="text" class="form-control" name="subPrevious" value="{{subject.subPrevious}}"/>
  </div>
  
  {{!-- //////////////////////////////////// --}}

  <div class="mt-3">
    <button class="btn btn-success" type="submit">save</button>
  </div>

</form>

